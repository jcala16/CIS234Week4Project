@model CH04.Models.Contact

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Contact Details</h1>

<div class="card shadow-sm">
    <div class="card-header bg-dark text-white">
        Contact Information
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">First Name</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3">Last Name</dt>
            <dd class="col-sm-9">@Model.LastName</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">
                @(Model.Category?.Name ?? "Not assigned")
            </dd>

            <dt class="col-sm-3">Date Added</dt>
            <dd class="col-sm-9">@Model.DateAdded.ToString("MM/dd/yyyy h:mm tt")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
